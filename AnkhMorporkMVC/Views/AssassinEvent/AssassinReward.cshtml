@model AnkhMorporkMVC.ViewModels.AssassinRewardViewModel

@{
    ViewBag.Title = "AssassinEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid">
    <div class="row">
        <div class="cell-8"></div>
        <div class="cell-8"></div>
        <div class="cell-8"></div>
        <div class="img-container">
            <img src="~/Resources/index_img.png" style="width:100%;" />
            <div class="img-container pos-fixed pos-left-center">
                <img src="@Url.Content(Model.ImagePath)" style="width:400px;height:500px;margin-left:400px;">
            </div>

            <div class="cell-8 col-lg-offset-2">
                <div class="dialog pos-fixed pos-right-center img-rounded" style="width: 300px; margin-right: 400px; background-color:#fce8d4;">
                    @using (Html.BeginForm("AssassinReward", @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().Replace("Controller", "")))
                    {
                        <div>Say your reward!</div>
                        @Html.Hidden("ImagePath", Model.ImagePath)
                        @Html.Hidden("EventAnswer", Model.EventAnswer)
                        @Html.TextBoxFor(m => m.Input, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Input)
                        <button type="submit" class="btn btn-primary">Enter</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

