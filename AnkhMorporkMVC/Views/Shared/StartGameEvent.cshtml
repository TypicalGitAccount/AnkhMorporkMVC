@model AnkhMorporkMVC.ViewModels.IOViewModel

@{
    ViewBag.Title = "GameView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="grid">
<div class="row">
    <div class="cell-8"></div>
    <div class="cell-8"></div>
    <div class="cell-8"></div>
    <div class="img-container">
        <img src="~/Resources/index_img.png" style="width:100%;" />
            <div class="img-container pos-fixed pos-left-center">
                <img src="@Url.Content(Model.ImagePath)" style="width:400px;height:500px;margin-left:50px;">
            </div>

            <div class="cell-8 col-lg-offset-2">
                <div class="dialog pos-fixed pos-right-center" style="width: 1000px; margin-right: 50px; background-color: #fce8d4 ">
                    <div class="dialog-title" style="font-size:25px;">@Model.output</div>
                    <div class="dialog-actions">
                        Choose your answer..
                        @using (Html.BeginForm("Event", @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().Replace("Controller", "")))
                        {
                            <div class="form-group">
                                @Html.EnumDropDownListFor(m => m.EventAnswer, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary">Continue</button>
                        }
                    </div>
                </div>
            </div>
    </div>
</div>
</div>
